---
layout: layouts/base.vto
---

<div class="gallery">
{{ for item of wallpapers }}
  <section class="wallpaper">
    <h2>
      {{ item.title }}
    </h2>
    <img eleventy:formats="webp" eleventy:width="auto" src="/wallpapers/{{ item.path }}" alt="{{ item.title }}" class="thumbnail" />
    
    <p>
      <a href="/wallpapers/{{ item.path }}" class="download" download>Download</a> ({{ item.size }})
    </p>
  </section>
{{ /for }}
</div>